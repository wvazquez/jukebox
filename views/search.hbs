
<div class="container search-results">
    <h3> Showing results for: {{search}} </h3>
    <div class="search-category">
        <button name='songs' class="view-all">View All Songs </button>
        <div class="card-deck ">
            {{#each_upto tracks 4}}
            <div class="card col-sm-3">
                <img src="{{album.images.[0].url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title">{{name}}</h4>
                    <h5 class="card-title">{{artists.[0].name}}</h5>
                    {{!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> --}}
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            {{/each_upto}}
        </div>
    </div>
    <div class="search-category">
        <button name='artists' class="view-all">View All Artists </button>
        <div class="card-deck">
            {{#each_upto artists 4}}
            <div class="card col-sm-3">
                <img src="{{images.[0].url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    {{!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> --}}
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            {{/each_upto}}
        </div>
    </div>

    <div class="search-category">
        <button name='albums' class="view-all">View All Albums </button>

        <div class="card-deck">
            {{#each_upto albums 4}}
            <div class="card col-sm-3">
                <img src="{{images.[0].url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    {{!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> --}}
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            {{/each_upto}}
        </div>
    </div>
    
</div>

<div class="container search-all">
    <h3>All <span class="view-all-title"></span>:</h3>
    <button class="search-return">RETURN</button>
    <div class="card-deck">
            {{#each tracks}}
            <div class="card col-sm-2 song-container">
                <img src="{{album.images.[0].url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    {{!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> --}}
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            {{/each}}
            {{#each artists}}
            <div class="card col-sm-2 artist-container">
                <img src="{{images.[0].url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    {{!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> --}}
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            {{/each}}
            {{#each albums}}
            <div class="card col-sm-2 playlist-container">
                <img src="{{images.[0].url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    {{!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> --}}
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>