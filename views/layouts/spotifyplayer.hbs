<!DOCTYPE html>
<html>
<head>
  <title>Jukebox - Player</title>
  <!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<!-- Bootstrap core CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.9/css/mdb.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/main.css' />
</head>
<body>
  <h1>Web Player</h1>

<div class="container spotify-container" trackID="{{data.trackID}}">

<!-- Card -->
<div class="card col-sm-5">
  <!-- Card image -->
  <div class="view overlay">
    <img class="card-img-top" src="{{data.albumImage}}" alt="Card image cap">
    <a href="#!">
      <div class="mask rgba-white-slight"></div>
    </a>
  </div>
  <!-- Avatar -->
  <div class="mx-auto spotify-avatar">
    <img src="{{data.artistImage}}" class="rounded-circle" alt="woman avatar">
  </div>

  <!-- Card content -->
  <div class="card-body">

    <!-- Title -->
    <h4 class="card-title">{{data.songName}}</h4>
    <!-- Text -->
    <p class="card-text">{{data.artistName}}</p>
    <!-- Button -->
    <div class="btn-group" role="group" aria-label="Basic example">
    <button type="button" class="btn purple-gradient btn-rounded">Left</button>
    <button type="button" id="togglePlay" class="btn purple-gradient btn-rounded">Play</button>
    <button type="button" class="btn purple-gradient btn-rounded">Right</button>
</div>

  </div>

</div>
<!-- Card -->
</div>

 


<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.9/js/mdb.min.js"></script>
  <script src="https://sdk.scdn.co/spotify-player.js"></script>
  <script src="/javascripts/player.js"></script>
</body>
</html>